<%- include('includes/header.ejs') %>

<h1><%= title %></h1>
<p>Welcome to <%= title %></p>
<a class="btn btn-success add" href="/create">Create New User</a>
<h1>Count of <%= users.length %> Users</h1>
<div class="container">
  <% users.forEach(user => { %>
  <div class="card" style="width: 16rem;">
    <img src="<%= user.image %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= user.username%> <%= user.lastname%></h5>
      <p class="card-text">Some quick </p>
      <a class="btn btn-danger" href="/deleteUser/<%= user._id%>">Delete</a>
      <a class="btn btn-primary" href="/update/<%= user._id%>">Update</a>
    </div>
  </div>
  <% }) %>
</div>
<br>
<br>
<br>
<br>

</body>

</html>